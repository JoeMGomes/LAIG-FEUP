<lxs>
    <scene root="root" axis_length="5" />
    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="5" y="5" z="10" />
            <to x="0" y="0" z="0" />
        </perspective>
        <perspective id="topView" near="0.1" far="500" angle="45">
            <from x="1" y="15" z="1" />
            <to x="0" y="0" z="0" />
        </perspective>
    </views>
    <globals>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </globals>
    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant="1.0" linear="1.0" quadratic="1.0" />
        </omni>
    </lights>
    <textures>
        <texture id="body" file="scenes/images/drone_body.png" />
    </textures>
    <materials>
        <material id="default" shininess="5">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.7" g="0.7" b="0.7" a="1.0" />
            <diffuse r="1" g="1" b="1" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </material>
    </materials>
    <transformations>
        <transformation id="demoTransform">
            <scale x="5" y="1" z="5" />
            <rotate axis="x" angle="45" />
            <rotate axis="z" angle="0" />
        </transformation>
    </transformations>
    <animations>
        <animation id="bladeRotate">
            <keyframe instant="18">
                <translate x="0" y="0" z="0" />
                <rotate angle_x="0" angle_y="-10000" angle_z="0" />
                <scale x="1" y="1" z="1" />
            </keyframe>
        </animation>
    </animations>
    <primitives>
        <primitive id="bladeRect">
            <rectangle x1="0" y1="0" x2="1" y2=".4" />
        </primitive>
        <primitive id="human">
            <objfile file="models/male.obj"/>
        </primitive>
    </primitives>
    <components>
        <component id="root">
            <transformation></transformation>
            <materials>
                <material id="default" />
            </materials>
            <texture id="body" />
            <children>
                <primitiveref id="human"/>
            </children>
        </component>
    </components>
</lxs>
